name: Roblox AFK

on:
  workflow_dispatch:
  schedule:
    - cron: '0 * * * *' # รันทุกชั่วโมง

jobs:
  afk:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: 18
      - run: npm install
      - run: node index.js
        env:
          ROBLOX_COOKIE: ${{ secrets.ROBLOX_COOKIE }}
